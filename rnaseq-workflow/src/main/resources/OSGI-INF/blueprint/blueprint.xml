<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0" default-activation="lazy">

  <cm:property-placeholder persistent-id="edu.unc.mapseq.pipeline.rnasequence" update-strategy="reload">
    <cm:default-properties>
      <cm:property name="corePoolSize" value="20" />
      <cm:property name="maxPoolSize" value="20" />
      <cm:property name="period" value="300000" />
      <cm:property name="composite-exons"
        value="/datastore/rclbg/tier1data/nextgenseq/seqware-analysis/mapsplice_rsem/composite_exons.txt" />
      <cm:property name="bed" value="/datastore/rclbg/tier1data/nextgenseq/seqware-analysis/mapsplice_rsem/unc_hg19.bed" />
      <cm:property name="junctions"
        value="/datastore/rclbg/tier1data/nextgenseq/seqware-analysis/mapsplice_rsem/splice_junctions.txt" />
      <cm:property name="bowtie-index-directory"
        value="/datastore/rclbg/tier1data/nextgenseq/seqware-analysis/mapsplice_rsem/Genomes/hg19_M_rCRS/ebwt/humanchridx_M_rCRS" />
      <cm:property name="chromosome-directory"
        value="/datastore/rclbg/tier1data/nextgenseq/seqware-analysis/mapsplice_rsem/Genomes/hg19_M_rCRS/chromosomes" />
      <cm:property name="order"
        value="/datastore/rclbg/tier1data/nextgenseq/seqware-analysis/mapsplice_rsem/rsem_ref/hg19_M_rCRS_ref.transcripts.fa" />
      <cm:property name="reference-sequence-prefix"
        value="/datastore/rclbg/tier1data/nextgenseq/seqware-analysis/mapsplice_rsem/rsem_ref/hg19_M_rCRS_ref" />
    </cm:default-properties>
  </cm:property-placeholder>

  <reference id="mapseqConfigurationService" interface="edu.unc.mapseq.config.MaPSeqConfigurationService" />
  <reference id="accountDAO" interface="edu.unc.mapseq.dao.AccountDAO" />
  <reference id="accountGroupDAO" interface="edu.unc.mapseq.dao.AccountGroupDAO" />
  <reference id="fileDataDAO" interface="edu.unc.mapseq.dao.FileDataDAO" />
  <reference id="HTSFSampleDAO" interface="edu.unc.mapseq.dao.HTSFSampleDAO" />
  <reference id="platformDAO" interface="edu.unc.mapseq.dao.PlatformDAO" />
  <reference id="jobDAO" interface="edu.unc.mapseq.dao.JobDAO" />
  <reference id="studyDAO" interface="edu.unc.mapseq.dao.StudyDAO" />
  <reference id="sequencerRunDAO" interface="edu.unc.mapseq.dao.SequencerRunDAO" />
  <reference id="workflowDAO" interface="edu.unc.mapseq.dao.WorkflowDAO" />
  <reference id="workflowPlanDAO" interface="edu.unc.mapseq.dao.WorkflowPlanDAO" />
  <reference id="workflowRunDAO" interface="edu.unc.mapseq.dao.WorkflowRunDAO" />

  <bean id="maPSeqDAOBean" class="edu.unc.mapseq.dao.MaPSeqDAOBean">
    <property name="accountDAO" ref="accountDAO" />
    <property name="accountGroupDAO" ref="accountGroupDAO" />
    <property name="fileDataDAO" ref="fileDataDAO" />
    <property name="HTSFSampleDAO" ref="HTSFSampleDAO" />
    <property name="platformDAO" ref="platformDAO" />
    <property name="jobDAO" ref="jobDAO" />
    <property name="studyDAO" ref="studyDAO" />
    <property name="sequencerRunDAO" ref="sequencerRunDAO" />
    <property name="workflowDAO" ref="workflowDAO" />
    <property name="workflowPlanDAO" ref="workflowPlanDAO" />
    <property name="workflowRunDAO" ref="workflowRunDAO" />
  </bean>

  <bean id="rnaSeqPipelineBeanService" class="edu.unc.mapseq.pipeline.rnaseq.RNASeqPipelineBeanService">
    <property name="mapseqConfigurationService" ref="mapseqConfigurationService" />
    <property name="maPSeqDAOBean" ref="maPSeqDAOBean" />
    <property name="compositeExons" value="${composite-exons}" />
    <property name="bed" value="${bed}" />
    <property name="order" value="${order}" />
    <property name="referenceSequencePrefix" value="${reference-sequence-prefix}" />
    <property name="junctions" value="${junctions}" />
    <property name="bowtieIndexDirectory" value="${bowtie-index-directory}" />
    <property name="chromosomeDirectory" value="${chromosome-directory}" />
    <cm:managed-properties persistent-id="edu.unc.mapseq.pipeline.rnaseq" update-strategy="container-managed" />
  </bean>

  <bean id="threadPoolExecutor" class="edu.unc.mapseq.pipeline.PipelineThreadPoolExecutor">
    <argument value="${corePoolSize}" />
    <argument value="${maxPoolSize}" />
  </bean>

  <bean id="task" class="edu.unc.mapseq.pipeline.rnaseq.RNASeqPipelineExecutorTask">
    <property name="pipelineBeanService" ref="rnaSeqPipelineBeanService" />
    <property name="threadPoolExecutor" ref="threadPoolExecutor" />
  </bean>

  <service ref="rnaSeqPipelineBeanService" interface="edu.unc.mapseq.pipeline.PipelineBeanService" />

  <bean id="rnaSeqPipelineExecutorService" class="edu.unc.mapseq.pipeline.rnaseq.RNASeqPipelineExecutorService"
    init-method="start" destroy-method="stop" activation="eager">
    <property name="task" ref="task" />
    <property name="period" value="${period}" />
  </bean>

</blueprint>
